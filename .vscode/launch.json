	"version": "0.2.0",
	"configurations": [
		{
			"name": "FunVM Compiler",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/compiler/FVMCexe",
			"args": [
				"${workspaceFolder}/tests/single_expression_test.fn"
			],
			"cwd": "${workspaceFolder}",
			"stopAtEntry": true
		},
		{
			"name": "FunVM Virtual machine",
			"type": "cppdbg",
			"request": "launch",
			"program": "${workspaceFolder}/build/vm/FVMexe",
			"args": [
				"${workspaceFolder}/tests/string_test.fvb"
			],
			"cwd": "${workspaceFolder}",
			"stopAtEntry": true
		}
	]
}